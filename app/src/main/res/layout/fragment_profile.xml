<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <View
        android:id="@+id/topView"
        android:layout_width="663dp"
        android:layout_height="150dp"
        android:background="@color/wawe_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="670dp"
        android:layout_height="151dp"
        android:layout_below="@+id/topView"
        android:background="@drawable/ic_wave" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="136dp"
        android:layout_height="128dp"
        android:layout_marginTop="10dp"
        app:civ_border_color="@color/wawe_dark_blue"
        app:civ_border_width="3dp"
        tools:srcCompat="@drawable/instagram_user_outline_24" />

    <View
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_rounded_line"
        android:backgroundTint="@color/white" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ivProfileImage"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        tools:text="megana" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUsername"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/ivProfileImage"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Menlo Park, CA" />

    <Button
        android:id="@+id/btnVisitedRestaurants"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="229dp"
        android:background="@drawable/round_border"
        android:backgroundTint="@color/wawe_dark_blue"
        android:drawablePadding="3dp"
        android:outlineProvider="paddedBounds"
        android:text="Visited Restaurants"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnFavorites"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnVisitedRestaurants"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/round_border"
        android:text="Favorites"
        android:textAllCaps="false" />

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="75dp"
        android:layout_height="62dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="-1dp"
        android:layout_toRightOf="@id/tvUsername"
        android:background="@drawable/round_border"
        android:elevation="0dp"
        android:src="@android:drawable/ic_menu_preferences"
        android:visibility="visible"
        app:backgroundTint="#FFFFFF"
        app:tint="#000000"
        tools:ignore="SpeakableTextPresentCheck"
        tools:src="@android:drawable/ic_menu_preferences" />


</RelativeLayout>